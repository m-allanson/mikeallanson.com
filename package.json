{
  "name": "eleventy-base-blog",
  "version": "7.0.0",
  "description": "A starter repository for a blog web site using the Eleventy static site generator.",
  "scripts": {
    "build:site": "npx @11ty/eleventy",
    "build:css": "npx postcss src/css/global.css -o dist/css/global.css",
    "build": "NODE_ENV=production npm run build:site && NODE_ENV=production npm run build:css",
    "dev": "concurrently -c 'blue,magenta' 'npm run build:site -- --serve' 'npm run build:css -- --watch'",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/11ty/eleventy-base-blog.git"
  },
  "author": {
    "name": "Zach Leatherman",
    "email": "zachleatherman@gmail.com",
    "url": "https://zachleat.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/11ty/eleventy-base-blog/issues"
  },
  "homepage": "https://github.com/11ty/eleventy-base-blog#readme",
  "dependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-navigation": "^0.3.3",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@humanwhocodes/markdown-it-markua-aside": "^0.2.0",
    "concurrently": "^7.2.2",
    "cssnano": "^5.1.12",
    "luxon": "^2.4.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-js": "^4.0.0",
    "tailwindcss": "^3.1.6"
  },
  "devDependencies": {
    "prettier": "^2.7.1"
  }
}
